<!-- Title Div -->
  <div class="row justify-content-md-center">
    <h1>Devour-A-Burger!</h1>
  </div>
<!-- Burger Pic Div -->
  <div class="row justify-content-md-center">
    <img src="../public/assets/img/burgerPic.png" alt="A burger with googly eyes">
  </div>
<!-- Burger row -->
  <div class="row">
    <div class="offset-md-1 col-md-4">
      <h2>Burgers ready for eating</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burgersReady devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="offset-md-2 col-md-4">
      <h2>Burgers that have been devoured</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burgersEaten devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
<!-- Add A Burger Row -->
  <div clas="row justify-content-md-center">
    <div class="offset-md-4 col-md-4">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="makeBurger">Burger Name:</label>
          <input type="text" id="makeBurger" name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
